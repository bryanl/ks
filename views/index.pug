extends layout

block content
  div(class='row')
    div(class='col')
      h3 Data Source Configuration

      p
        Data Source Configuration is used to configuration a data source.

      table(class='table table-striped')
        each val, key in dataSource
          tr
            th= key
            td= val

  div(class='row')
    div(class='col')
      h3 Current Region

      p= region

  div(class='row')
    div(class='col')
      h3 Environment

      table(class='table table-striped')
        tr
          th Hostname
          td= hostname